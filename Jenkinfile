pipeline {
    agent any
    environment{
        SONAR_SCANNER = tool 'SonarScanner'
    }
    stages {
        stage('SCM') {
            steps {
                checkout scm 
            }
        }

        stage('SAST') {
            steps {
                echo "Analizando código estático"
                 withSonarQubeEnv() { // Will pick the global server connection you have configured
                  sh 'mvn clean deploy sonar:sonar'
                }
            }
        }
    }
}
