pipeline {
    agent any
    environment{
        SONAR_SCANNER = tool 'SonarScanner'
    }
    stages {
        stage('SCM') {
            steps {
                checkout scm 
            }
        }

        stage('SAST') {
            steps {
                echo "Analizando código estático"
                 sh "mvn clean package sonar:sonar"
            }
        }
    }
}
