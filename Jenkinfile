pipeline {
    agent any
    environment{
        SONAR_SCANNER = tool 'SonarScanner'
    }
    stages {
        stage('SCM') {
            steps {
                checkout scm 
            }
        }

        stage('Build') {
            steps {
                sh 'set +x; chmod 777 mvnw'
                sh './mvnw clean package'
            }
        }


        stage('SAST') {
            steps {
                echo "Analizando código estático"
                withSonarQubeEnv('sonarqube-server'){
                    sh "set +x;./mvnw sonar:sonar"
                }
                
            }
        }
    }
}
